<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Hello1</servlet-name>
    <servlet-class>I18N.Hello1</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Hello2</servlet-name>
    <servlet-class>I18N.Hello2</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Hello3</servlet-name>
    <servlet-class>I18N.Hello3</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>Hello1</servlet-name>
    <url-pattern>/servlet/Hello1</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Hello2</servlet-name>
    <url-pattern>/servlet/Hello2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Hello3</servlet-name>
    <url-pattern>/servlet/Hello3</url-pattern>
  </servlet-mapping>

</web-app>
